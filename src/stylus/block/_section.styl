.section
  position relative
  width 100%
  height 100%
  min-height 100vh
  &:before
    content ''
    display block
    position absolute
    top 0
    left 0
    z-index 1
    width 100%
    height 100%
    background-color rgba(#000, .25)

.section__content
  box-sizing border-box
  position absolute
  top 50%
  left 50%
  z-index 1
  width 100%
  height auto
  max-width 600px
  padding 5%
  transform translate(-50%, -50%)
