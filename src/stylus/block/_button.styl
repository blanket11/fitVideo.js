.button
  display block
  width 100%
  max-width 300px
  height 32px
  margin 0 auto
  line-height 32px
  font-size 14px
  color #fff
  border 1px solid #fff
  text-align center
  cursor pointer
  text-shadow 0 0 3px rgba(#000, .5)
  opacity 1
  transition opacity .5s ease
  &:hover
    opacity .45

.button-mt
  margin-top 40px
